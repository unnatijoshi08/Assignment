<div className="w-screen h-screen flex">
      <Sidebar />
      <div className="flex flex-col">
        <Header />
        <div className="bg-[#F9F9F9]">
          <div className="w-full flex justify-between mt-10 font-semibold">
            <div className="ml-6">Users</div>
            <div className="flex items-center">
              <button className="border-[4px] p-2 border-white shadow-lg bg-white display:flex items-center">
                <ListViewIcon className="text-[#641CC0]" />
              </button>
            </div>
          </div>
        </div>
        <UserListComponent
          users={users}
          onEdit={setEditingUser}
          onDelete={setDeletingUser}
        />
        {editingUser && (
          <EditUserComponent user={editingUser} onEdit={editUser} />
        )}
        {deletingUser && (
          <DeleteUserComponent user={deletingUser} onDelete={deleteUser} />
        )}
      </div>
    </div>


const editUser = (updatedUser) => {
  setUsers(
    users.map((user) => (user.id === updatedUser.id ? updatedUser : user))
  );
  setEditingUser(null);
  alert("The user has been updated successfully");
};

const deleteUser = (user) => {
  if (user) {
    setUsers(users.filter((u) => u.id !== user.id));
    alert("The user has been deleted successfully");
  }
  setDeletingUser(null);
};
